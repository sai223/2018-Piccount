<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText android:layout_height="50dp" android:layout_width="300dp" android:layout_marginTop="151dp" android:hint="ID" android:layout_centerHorizontal="true" android:id="@+id/idInput"/>

    <EditText android:layout_height="50dp" android:layout_width="300dp" android:hint="Password" android:layout_centerHorizontal="true" android:id="@+id/passwordInput" android:layout_below="@+id/idInput"/>

    <Button android:layout_height="55dp" android:layout_width="150dp" android:layout_marginTop="20dp" android:id="@+id/loginButton" android:layout_below="@+id/passwordInput" android:layout_toStartOf="@+id/signupButton" android:textAllCaps="false" android:text="Log in"/>

    <Button android:layout_height="55dp" android:layout_width="150dp" android:id="@+id/signupButton" android:textAllCaps="false" android:text="Sign up" android:layout_alignEnd="@+id/passwordInput" android:layout_alignTop="@+id/loginButton"/>

</RelativeLayout>