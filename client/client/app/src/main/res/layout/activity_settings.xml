<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom = "true"
    tools:context=".SettingsActivity"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="78dp">

    <LinearLayout
        android:id="@+id/belowIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="187dp"
        android:gravity="center">

        <Button
            android:id="@+id/setting_insert_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="#0054a6"
            android:gravity="center"
            android:padding="15dp"
            android:text="초기 데이터 입력"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/setting_clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="#0054a6"
            android:gravity="center"
            android:padding="15dp"
            android:text="모든 데이터 삭제"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom ="true"
        android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/ListCheckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab1_see_records"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="447dp" />

        <ImageButton
            android:id="@+id/AddListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab2_add_records"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="447dp" />

        <ImageButton
            android:id="@+id/ReportCheckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab3_report"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="447dp" />

        <ImageButton
            android:id="@+id/SettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab4_setting"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="447dp" />
    </LinearLayout>

</RelativeLayout>